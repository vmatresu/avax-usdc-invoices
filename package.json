{
  "name": "avax-usdc-invoices",
  "version": "1.0.0",
  "private": true,
  "description": "On-chain invoice system for Avalanche C-Chain using native USDC",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs --report-unused-disable-directives",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs --fix",
    "lint:contracts": "pnpm --filter contracts lint",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,json,md,yml,yaml}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,json,md,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:web": "pnpm --filter web typecheck",
    "typecheck:shared": "pnpm --filter shared typecheck",
    "test": "pnpm --filter contracts test",
    "test:watch": "pnpm --filter contracts test:watch",
    "clean": "pnpm --filter web clean && pnpm --filter contracts clean",
    "deploy:fuji": "pnpm --filter contracts deploy:fuji",
    "deploy:mainnet": "pnpm --filter contracts deploy:mainnet",
    "prepare": "husky install"
  },
  "keywords": [
    "avalanche",
    "usdc",
    "invoice",
    "payments",
    "web3",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-imports": "^1.10.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "contracts"
  ]
}
