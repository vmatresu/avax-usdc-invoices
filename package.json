{
  "name": "avax-usdc-invoices",
  "version": "1.0.0",
  "private": true,
  "description": "On-chain invoice system for Avalanche C-Chain using native USDC",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "eslint . --report-unused-disable-directives",
    "lint:fix": "eslint . --fix",
    "lint:contracts": "pnpm --filter contracts lint",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,mjs,json,md,yml,yaml}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,mjs,json,md,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:web": "pnpm --filter web typecheck",
    "typecheck:shared": "pnpm --filter shared typecheck",
    "test": "pnpm --filter contracts test && pnpm --filter shared test && pnpm --filter web test",
    "test:shared": "pnpm --filter shared test",
    "test:web": "pnpm --filter web test",
    "test:contracts": "pnpm --filter contracts test",
    "test:watch": "pnpm --filter shared test:watch",
    "test:coverage": "pnpm --filter shared test:coverage && pnpm --filter web test:coverage",
    "clean": "pnpm --filter web clean && pnpm --filter contracts clean",
    "deploy:fuji": "pnpm --filter contracts deploy:fuji",
    "deploy:mainnet": "pnpm --filter contracts deploy:mainnet",
    "prepare": "husky install"
  },
  "keywords": [
    "avalanche",
    "usdc",
    "invoice",
    "payments",
    "web3",
    "blockchain"
  ],
  "author": "Valentin Matresu",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.35",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "contracts"
  ],
  "packageManager": "pnpm@8.15.0"
}
